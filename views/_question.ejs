<li id="post-<%= post._id %>">
    <p>
        <%= question.title %>
        <br>
        <%= question.tag $>
    </p>
    <div class="post-comments">
        <% if (locals.user){ %>
            <form action="/answer/create" method="POST">
                <input type="text" name="content" placeholder="Type Here to add answer..." required>
                <input type="hidden" name="post" value="<%= question._id %>" >
                <input type="submit" value="Add Comment">
            </form>
        <% } %>

        <div class="post-comments-list">
            <ul id="post-comments-<%= post._id %>">
                <% for (comment of post.comments){%>
                    <%- include('_comment') -%>
                    
                
                <%} %>
            </ul>
        </div>
    </div>
    
</li>