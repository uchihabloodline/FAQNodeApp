<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <style>

  </style>
  <title>
    <%= title %>
  </title>
</head>

<body>
  <% if(flash.success && flash.success.length > 0){ %>
    <h5>
        <%= flash.success %>
    </h5>
    <%}%>
  <div class="d-flex flex-column align-items-center">
    <form action="/user/create" method="POST">
      <div class="d-flex flex-column border rounded p-3 mt-5" style="width: 300px;">
        <h2 class="text-center mb-4">
          <%=title%>
        </h2>
        <div class="mb-3">
          <label for="emailInput" class="form-label">Email address</label>
          <input class="form-control" type="email" name="email" placeholder="Enter your email" id="emailInput" required>
        </div>
        <div class="mb-3">
          <label for="passwordInput" class="form-label">Password</label>
          <input class="form-control" type="password" name="password" placeholder="Enter your password"
            id="passwordInput" required>
        </div>
        <div class="mb-4">
          <label for="confirmPasswordInput" class="form-label">Confirm password</label>
          <input class="form-control" type="password" name="confirm_password" placeholder="Enter your password"
            id="confirmPasswordInput" required>
        </div>
        <button class="btn btn-primary align-self-center mb-2" type="submit" value=Sign-Up>
          Submit
        </button>
        <a class="btn btn-link btn-sm" href="/user/sign-in">Sign-in</a>
        <a class="btn btn-link btn-sm" href="/">Home</a>
      </div>
    </form>
  </div>
  <script>
    <% if (flash.success && flash.success.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>
            <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>
  </script>
</body>

</html>